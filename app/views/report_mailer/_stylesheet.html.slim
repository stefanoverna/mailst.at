sass:
  $green: #7D9D2F
  $yellow: #FF8F30
  $red: #FF0029
  $grey: #CDD0CB
  $darkgrey: #8B8683
  $azure: #26ADE4
  $light-azure: #d5e6ed

  *
    margin: 0
    padding: 0

  #content
    font-family: 'Open Sans', 'Helvetica', Arial
    width: 740px
    margin: 0 auto

    .padded
      padding: 0 30px

    #read-on-website
      text-align: center
      font-size: 11px
      padding: 20px 0
      color: #777

      a
        color: #777
        text-decoration: underline

    #mail-header
      width: 100%
      border-bottom: 2px solid #ccc
      margin-bottom: 20px

      .mailstat
        background-color: $azure
        color: white
        padding: 2px 8px

      .greeting
        text-align: left
        color: #555
        font-size: 15px
        padding-left: 5px

      .icon
        width: 24px

      .timestamp
        color: #555
        font-size: 14px

    #at-a-glance
      margin-bottom: 40px

      h3
        font-size: 30px
        font-weight: 300
        line-height: 35px
        border-bottom: 2px solid #ccc
        color: #222
        margin-bottom: 15px

      table
        width: 100%

        tr.legend td
          text-align: center
          font-size: 14px
          color: #444
          min-width: 75px
          padding: 5px 0

        tr.folder
          margin-bottom: 5px
          background-color: #eee
          font-size: 20px
          line-height: 40px

          .label
            text-align: left
            padding-left: 15px
            width: 100%

            .name
              font-size: 20px

          .total, .overdue
            color: white
            text-align: center
            white-space: nowrap
            font-size: 21px

          &.success
            .total
              background-color: darken($green, 10%)
            .overdue
              background-color: $green

          &.failure
            .total
              background-color: darken($red, 10%)
            .overdue
              background-color: $red

          &.warning
            .total
              background-color: darken($yellow, 10%)
            .overdue
              background-color: $yellow

          &.unknown
            .total
              background-color: darken(#666, 10%)
            .overdue
              background-color: #666

    #tip-of-the-day
      background-color: #eeeeee
      border-top: 2px solid #555
      border-bottom: 2px solid #555
      padding: 30px

      table td.name
        padding-left: 5px
        font-size: 15px
        color: #444
        font-weight: bold

      h3
        margin-top: 10px
        font-size: 20px
        color: #222
        margin-bottom: 5px

        a
          color: #222
          text-decoration: underline

      .description
        line-height: 19px
        font-size: 17px
        color: #444

    #folder-details
      margin-bottom: 30px
      width: 100%
      font-size: 14px

      th
        font-size: 25px
        font-weight: normal
        color: #444
        padding-bottom: 15px
        padding-top: 30px
        text-align: left

      td
        border-bottom: 1px solid #ccc
        padding: 7px 0
        vertical-align: top
        color: #222

        a
          color: #222
          text-decoration: none

        &.suggestion
          padding: 0
          padding-bottom: 15px

          .inner
            background-color: mix($azure, #fff, 20%)
            padding: 10px

        &.old
          text-align: right
          font-size: 12px

        &.from
          text-align: left
          font-size: 12px
          padding-right: 10px

  #footer
    background-color: $azure
    color: white
    padding: 20px
    font-size: 14px

    a
      color: white
      font-weight: bold
      text-decoration: underline

